<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Visit our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:fles;flex-wrap: wrap">
    
            <% campgrounds.forEach(function(camp){%>
                <div class="col-sm-6 col-md-4">
                        <figure class="figure" >
                                <img src="<%=camp.image%>" class="figure-img img-fluid rounded img-thumbnail">
                                <figcaption class="figure-caption text-center"><h4><%=camp.name%></h4></figcaption>
                                <figcaption class="figure-caption text-center"><a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a></figcaption>
                        </figure>    
                </div>  
            <%})%>
    </div>
    

   
</div>
    
<% include ../partials/footer %>