<% include partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Visit our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
            <% campgrounds.forEach(function(camp){%>
                <div class="col-md-3 col-sm-6">
                    <img src="<%=camp.image%>" class="img-thumbnail">
                    <figcaption class="figure-caption"><h5 class="text-center"><%=camp.name%></h5></figcaption>   
                </div>
            <%})%>
        
    </div>
    

   
</div>
    
<% include partials/footer %>