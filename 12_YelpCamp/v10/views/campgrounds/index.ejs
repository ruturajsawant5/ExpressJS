<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Visit our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
</div>
<div class="container">
    <div class="row" >
        <% campgrounds.forEach(function(camp){%>
            <div class="col-md-3 text-center">
                <div class="img-thumbnail">
                <img src="<%=camp.image%>" alt="" class="img-fluid" >
                <div class="caption-full">
                <h4><%=camp.name%></h4>
                <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary ">More Info</a>
                </div>
                </div>
            </div> 
         
        
        <%})%>
    </div>
         

    
</div>
    

   
</div>
    
<% include ../partials/footer %>